<%= form_with(model: [ User.new, Group.new, Trade.new], url: user_group_trades_path, method: :post) do |form| %>
    <% if trade.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(trade.errors.count, "error") %> prohibited this trade from being saved:</h2>
  
        <ul>
          <% trade.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div>
      <% form.label :user_id, style: "display: block" %>
      <%= form.number_field :user_id, id: :trade_user_id, class:"form-control", value: current_user.id, type: :hidden %>
    </div>
  
    <div class="mx-6">
      <% form.label :name, style: "display: block" %>
      <%= form.text_field :name, class:"form-control", placeholder:"Name" %>
    </div>
    <br />
    <div class="mx-6">
      <% form.label :amount, style: "display: block" %>
      <%= form.text_field :amount, class:"form-control", placeholder:"Amount" %>
    </div>
    <br />
    <div class="mx-6">
      <% form.label :group, style: "display: block" %>
      <%= form.text_field :group, value:@group.name, class:"form-control" %>
    </div>
    <br />
    <div class="mx-6">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
  
  