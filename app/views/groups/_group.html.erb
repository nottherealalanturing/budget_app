<div id="<%= dom_id group %>">
  <div class="my-6 border-solid border-1 bg-[#F5F5F5] p-4 mx-4 cursor-pointer">
    <div class="flex justify-between md:w-1/2">
      <%= cl_image_tag @group.avatar.key, :width=>150, :crop=>"fill", class: "w-32 h-32 object-cover rounded-lg" %>
      <div class="flex flex-col justify-center">
        <h5 class="font-bold italic text-2xl"><%= group.name %><h5>
        <h5 class="font-bold text-sm">Total: $<%= group.trades.sum(:amount) %></h5>
      </div>
    </div>
  </div> 
</div>
